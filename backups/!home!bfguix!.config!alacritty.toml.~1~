# Keyboard bindings
[[keyboard.bindings]]
key = "Return"
mods = "Control|Shift"
action = "SpawnNewInstance"

# Hints configuration
[[hints.enabled]]
regex = "[^ ]+\\.rs:\\d+:\\d+"
command = { program = "code", args = ["--goto", "{hint-text}"] }
mouse = { enabled = true }

# Set the window size
[window]
dimensions = { columns = 84, lines = 24 }

[env]
