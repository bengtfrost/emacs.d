# i3status configuration file
# ~/.config/i3status/config

general {
    colors = true
    interval = 5
    color_good = "#a3be8c"
    color_bad = "#bf616a"
    color_degraded = "#ebcb8b"
}

order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "disk /"
# order += "disk /home"
order += "memory"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "battery all"
order += "tztime local"

wireless _first_ {
    format_up = "📶 %essid %quality %ip"
    format_down = "📶 down"
}

ethernet _first_ {
    format_up = "🌐 %ip (%speed)"
    format_down = "🌐 down"
}

volume master {
    format = "🔊 %volume"
    format_muted = "🔇 muted"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

disk "/" {
    format = "💽 / %avail"
    low_threshold = 10
    threshold_type = percentage_avail
}

disk "/home" {
    format = "🏠 ~ %avail"
    low_threshold = 10
    threshold_type = percentage_avail
}

memory {
    format = "🧠 %used"
    threshold_degraded = "1G"
    format_degraded = "🧠 %available"
}

cpu_usage {
    format = "⚡ %usage"
    max_threshold = 75
    degraded_threshold = 50
}

cpu_temperature 0 {
    format = "🌡️ %degrees°C"
    max_threshold = 70
    format_above_threshold = "🔥 %degrees°C"
    path = "/sys/class/thermal/thermal_zone0/temp"
}

battery all {
    format = "%status %percentage %remaining"
    format_down = "🔌 AC"
    status_chr = "⚡"
    status_bat = "🔋"
    status_unk = "❓"
    status_full = "✅"
    low_threshold = 15
    threshold_type = percentage
}

tztime local {
    format = "📅 %Y-%m-%d 🕐 %H:%M:%S"
}